/* FUTUROS TABS con details summary
https://codepen.io/chriscoyier/pen/XWNqxyY */


details{
  overflow:hidden;
  position: relative;
  summary{
    
    &::-webkit-details-marker {
      display:none;
    }
  }
  .detX{
    
    &_hold{
      display: grid;
      grid-template-rows: 0fr;
      transition:   .45s grid-template-rows $swiftOut;

    }
    &_box{

      overflow: hidden;
      opacity:0;
      transition: .6s opacity $swiftOut;
    }
  }
  &.act{
    .detX{
      &_click{
        &_i{
          transform:scaleY(-1);
        }
      }
      &_hold{
        grid-template-rows: 1fr;
        transition:  .45s grid-template-rows $swiftOut;
      }
      &_box{
        opacity:1;
        transition: .6s opacity .45s $swiftOut;
      }
    }

  }

}


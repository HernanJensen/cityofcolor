
.ldr{
  z-index:600;
  left:0;
  top:0;
  position: fixed;
  width: 100%;
  height:100vh;
  height:100lvh;

  display: flex;
  justify-content: center;
  align-items: flex-start;

  background-color: $bg;


  &_cnt{
    position: absolute;
    right:$padgut;
    top:4.8rem;
    overflow: hidden;
  

    span{
      display: inline-block;
    }
  }
}